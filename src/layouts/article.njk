---
layout: page.njk
---

<article class="Article">
  <div class="ArticleHead">
    {% if showNavigationBreadcrumbs and eleventyNavigation.key %}
      {# @see https://www.11ty.dev/docs/plugins/navigation #}
      {% set navPages = collections.all | eleventyNavigationBreadcrumb(eleventyNavigation.key) %}
      {% if navPages and navPages.length %}
        <ul class="ArticleBreadcrumbs">
          <li data-key="home">
            <a class="home" href="/" title="Site root"> {# <i class="bi bi-house"></i> #} </a>
          </li>
          {% for item in navPages %}
            <li
              data-key="{{ item.key }}"
              {% if item.parent %}class="hasParent" data-parent="{{ item.parent }}"{% else %}class="noParent"{% endif %}
            >
              <a href="{{ item.url }}"> {{ item.title }} </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    {% endif %}
    <h1 class="ArticleTitle">{{ title }}</h1>
    {% if not hideMeta %}
      <div class="ArticleMeta">
        {% if page.date %}
          <time
            class="metaItem articleDatetime"
            datetime="{{ page.date.toISOString() }}"
            title="Last document modification date"
            ><span>Last changes:</span> {{ page.date | readableDate }}</time
          >
        {% endif %}
        <div
          class="metaItem articleMinutesToRead"
          title="With an average speed of 200 words per minute"
        >
          <span>Time to read:</span> {{ content | readingTime({"speed": 200}) }}
        </div>
        {#
      <a
        href="https://github.com/lilliputten/lilliputten-11ty-site/blob/main/{{ page.inputPath }}"
        class="ArticleGithub"
        >Edit this page on GitHub</a
      >
      #}
      </div>
    {% endif %}
  </div>
  {{ content | safe }}
  <div class="ArticleFooter">
    {% if tags %}
      <ul class="ArticleTags tags">
        <li class="tagsTitle">Tags:</li>
        {%- for tag in tags | filterTags -%}
          <li class="tagsItem">
            <a class="linkAsText" href="/tags/{{ tag }}/">{{ tag }}</a>
          </li>
        {%- endfor -%}
      </ul>
    {% endif %}
    {#
    <div class="ArticleShare">
      If you like the article, you can
      <a
        class="ArticleShareButton"
        href="https://twitter.com/intent/tweet?text={{ title }} by @{{ site.twitter }}&url={{ site.paths.site }}{{ page.url }}"
        target="_blank"
        rel="noopener"
        >share it on Twitter</a
      >
    </div>
    #}
    {% set previousPost = collections.chunk | getPreviousCollectionItem(page) %}
    {% set nextPost = collections.chunk | getNextCollectionItem(page) %}
    <div class="ArticleNav">
      {# TODO! #}
      {% if previousPost %}
        <a href="{{ previousPost.url }}" class="ArticleNavButton articlePrev"
          >{{ previousPost.data.title }}</a
        >
      {% endif %}
      {% if nextPost %}
        <a href="{{ nextPost.url }}" class="ArticleNavButton articleNext"
          >{{ nextPost.data.title }}</a
        >
      {% endif %}
    </div>
  </div>
  {#
  <div class="ArticleWebmentions">
    {% include 'webmentions.njk' %}
  </div>
  #}
</article>
