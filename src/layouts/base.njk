<!DOCTYPE html>
<html class="page" lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>
            {{ renderData.title or title }}{% if not isIndex %} | {{ site.title }}{% endif %}
        </title>

        {# <meta name="color-scheme" content="dark light"> #}
        {# <meta name="theme-color" content="#cc2222" media="(prefers-color-scheme: light)"> #}
        {# <meta name="theme-color" content="#880088" media="(prefers-color-scheme: dark)"> #}

        <meta name="description" content="{{ description or site.description }}">

        <meta name="generator" content="Eleventy">

        {% include 'favicon.njk' %}

        {% include 'fonts.njk' %}

        {% include 'meta-open-graph.njk' %}
        {% include 'meta-rss.njk' %}
        {% include 'meta-webmentions.njk' %}

        <link rel="author" href="{{ site.paths.site }}/humans.txt">

        <link rel="stylesheet" href="/styles/styles.css">
        {# <link rel="stylesheet" href="/styles/dark.css" media="(prefers-color-scheme: dark)"> #}
    </head>
    <body class="page__body {% if not isIndex %}page__body_regular{% else %}page__body--main{% endif %}" id="{% if not isIndex %}regular{% else %}main{% endif %}">

        {{ content | safe }}

        <script type="text/javascript" src="/scripts/scripts.js"></script>

        {# {% include 'sw.njk' %} #}

    </body>
</html>
