  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ renderData.title or title }}{% if not isIndex %}â€” {{ site.title }}{% endif %}</title>

    {# <meta name="color-scheme" content="dark light"> #}
