<html class="page" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ renderData.title or title }}{% if not isIndex %}â€” {{ site.title }}{% endif %}</title>

    {# <meta name="color-scheme" content="dark light"> #}
    {# <meta name="theme-color" content="#cc2222" media="(prefers-color-scheme: light)"> #}
    {# <meta name="theme-color" content="#880088" media="(prefers-color-scheme: dark)"> #}

    <meta name="description" content="{{ description or site.description }}" />

    <meta name="generator" content="Eleventy" />

    {% include 'favicon.njk' %}
    {% include 'fonts.njk' %}
    {% include 'meta-open-graph.njk' %}
    {% include 'meta-rss.njk' %}
    {% include 'meta-webmentions.njk' %}

    <link rel="author" href="{{ site.paths.site }}/humans.txt" />

    {# CSS #}

    <link
      href="{% if isdevelopment %}/static/vendor/bootstrap-5.3.2/css/bootstrap.css{% else %}https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css{% endif %}"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="{% if isdevelopment %}/static/vendor/bootstrap-icons-1.11.3/font/bootstrap-icons.css{% else %}https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css{% endif %}"
      rel="stylesheet"
      type="text/css"
    />

    <!-- Webfonts -->
    {% if isdevelopment %}
      <link href="/static/vendor/webfonts/roboto/300.css" rel="stylesheet" type="text/css" />
      <link href="/static/vendor/webfonts/roboto/400.css" rel="stylesheet" type="text/css" />
      <link href="/static/vendor/webfonts/roboto/500.css" rel="stylesheet" type="text/css" />
      <link href="/static/vendor/webfonts/roboto/700.css" rel="stylesheet" type="text/css" />
    {% else %}
      <link rel="preconnect" href="https://fonts.googleapis.com" />
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
      <link
        href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
        rel="stylesheet"
      />
      {#
        Full link for the google font: -
        https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap
        Get customized link: - https://fonts.google.com/selection/embed
      #}
    {% endif %}

    <link rel="stylesheet" href="/assets/styles.css" />
    {# <link rel="stylesheet" href="/styles/dark.css" media="(prefers-color-scheme: dark)"> #}
  </head>
  <body
    class="page__body {% if not isIndex %}page__body--regular{% else %}page__body--main{% endif %}"
    id="{% if not isIndex %}regular{% else %}main{% endif %}"
  >
    {{ content | safe }}

    {# Bootstrap #}
    <script
      src="{% if isdevelopment %}/static/vendor/popperjs-2.11.8/popper.min.js{% else %}https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js{% endif %}"
      type="text/javascript"
    ></script>
    <script
      src="{% if isdevelopment %}/static/vendor/bootstrap-5.3.2/js/bootstrap.min.js{% else %}https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js{% endif %}"
      type="text/javascript"
    ></script>

    {# AMD/RequireJS (Used after bootstrap due to conflicts) #}
    <script
      src="{% if isdevelopment %}/static/vendor/requirejs-2.3.6/require.min.js{% else %}https://cdnjs.cloudflare.com/ajax/libs/require.js/2.3.6/require.min.js{% endif %}"
      type="text/javascript"
    ></script>

    <script type="text/javascript" src="/assets/scripts.js"></script>

    <script>
      // Initialize AMD/RequireJS modules system...
      if (typeof window.requirejs !== 'undefined') {
        window.requirejs(['scripts']);
      } else {
        console.error('Not found AMD/RequireJS modules support');
      }
    </script>

    {% include 'sw.njk' %}
  </body>
</html>
