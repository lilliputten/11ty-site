{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/scripts/*"]
    },
    "outDir": "./dist/"
    // "outFile": "scripts.js"
  },
  "files": ["src/scripts/scripts.ts"],
  "typeRoots": ["src/scripts/@types/**/*"],
  "include": ["src/scripts"]
}
