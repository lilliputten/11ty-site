{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/scripts/*"]
    },
    "outFile": "scripts.js"
  },
  "files": ["src/scripts/scripts.ts"],
  "typeRoots": ["src/scripts/@types/**/*"],
  "include": ["src/scripts"]
}
